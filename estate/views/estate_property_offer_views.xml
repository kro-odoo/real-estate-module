<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="property_offers_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="real_estate_offer_list_view" model="ir.ui.view">
        <field name="name">Real Estate Offer List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <!-- editable="bottom" to edit inline -->
            <tree string="Offers" editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_offer_form_view" model="ir.ui.view">
        <field name="name">Real Estate Offer Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id" />
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
