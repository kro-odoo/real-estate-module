<odoo>

    <record id="estate_property_wizard_view_form" model="ir.ui.view">
        <field name="name">estate.property.wizard.view.form</field>
        <field name="model">estate.property.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="amount"/>
                        <field name="partner_id"/>                        
                    </group>
                </sheet>
                <footer>
                    <button name="add_offers" class="btn-primary" type="object" string="Make Offer"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="estate_property_wizard_action" model="ir.actions.act_window">
        <field name="name">Estate Property Offers Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="estate_property_wizard_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
