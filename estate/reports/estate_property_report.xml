<odoo>
	 <template id="report_property_offers">
		<t t-foreach="docs" t-as="property">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<div class="page">
						<h2>
							<strong>Property: </strong>
							<span t-out="property.name" />
						</h2>
						<div>
							<strong>Salesman: </strong>
							<span t-out="property.salesperson_id.name" />
						</div>
						<div>
							<strong>State: </strong>
							<span t-out="property.state"/>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>

	 <record id="action_report_estate_property_offers" model="ir.actions.report">
		<field name="name">Property Offers</field>
		<field name="model">estate.property</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">estate.report_property_offers</field>
		<field name="report_file">estate.report_property_offers</field>
		<field name="print_report_name">'Property Offers'</field>
		<field name="binding_model_id" ref="model_estate_property" />
		<field name="binding_type">report</field>
	</record>
</odoo>